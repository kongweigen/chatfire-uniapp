.content {
  height: 100vh;
  background-color: #eeeeee;
  /* 举例背景颜色，您可以根据需要更改 */
  height: 100vh;
}
.bannerBox {
  height: 1200px;
}
.mainMenu {
  display: flex;
  align-items: center;
  position: absolute;
  top: 19vh;
  margin: 12px;
  width: 94vw;
  justify-content: space-between;
  z-index: 999;
}
.mainMenu .leftHeight {
  height: 20vh !important;
  flex-direction: column;
  background: linear-gradient(to bottom, #307ae4, #30a7e4, #30e2e4);
}
.mainMenu .boxUp {
  justify-content: center;
  align-items: center;
  margin-top: 6px;
  height: 66% !important;
}
.mainMenu .boxUp .createBox {
  margin-left: 2px;
}
.mainMenu .boxUp .createBox span {
  display: block;
  /* 使span成为块级元素 */
  margin-bottom: 2px;
  /* 设置底部外边距 */
}
.mainMenu .boxDown {
  flex-direction: row;
  background-color: rgba(225, 255, 255, 0.4);
  border-radius: 20px;
  width: calc(88% - 4px) !important;
  height: 24% !important;
  margin-bottom: 14px;
  align-items: center;
  justify-content: center;
  padding: 4px;
}
.mainMenu .leftBox {
  display: flex;
  width: 100%;
}
.mainMenu .leftBox .historyBox {
  display: flex;
  width: 30px;
  height: 30px;
  background-color: white;
  border-radius: 4px;
  justify-content: center;
  align-items: center;
}
.mainMenu .rightMenu {
  flex-direction: column;
  color: #333333 !important;
}
.mainMenu .menuItem {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 46vw;
  height: 9.5vh;
  border-radius: 18px;
  margin-bottom: 8px;
}
.moreItem {
  background-image: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.5) 0%, white 18%);
  border-radius: 8px 8px 0 0;
  width: 96vw;
  height: 58vh;
  padding: 16px 8px 0 8px;
  overflow-x: scroll;
  position: absolute;
  top: 42.5vh;
  transition: background-color 2s ease;
}
.moreItem .u-grid-item {
  border-radius: 8px !important;
  background-color: #eef5fb !important;
  height: 88px;
}
.moreItem .u-grid {
  padding: 8px;
}
.grid-text {
  font-size: 14px;
  color: #909399;
  padding: 10rpx 0 20rpx 0rpx;
  box-sizing: border-box;
}
.u-popup__content {
  border-radius: 24px !important;
  margin: 8px 8px 18px 8px;
}
.createPop {
  display: flex;
  padding: 32px 16px 0px 16px;
  height: 20vh;
  justify-content: space-around;
}
.createPop .createItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #eff4f7;
  border-radius: 8px;
  width: 46%;
}
.createPop .createItem text {
  font-weight: bold;
  color: #333333;
}
.createPop .createItem image {
  width: 120px !important;
  height: 120px !important;
}
.fade-enter-active,
.fade-leave-active {
  transition: opacity 2s;
}
.fade-enter, .fade-leave-to {
  opacity: 0;
}